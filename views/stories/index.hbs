{{#if stories}}
  {{#each stories}}
    <div class="card shadow mb-4">
      <div class="card-header story-info">
        <a href="/stories/user/{{user._id}}"><img
            class="rounded-circle btn-sm profile-sm"
            src="{{user.image}}"
          /></a>
        <span class="name-date">
          <a href="/stories/user/{{user._id}}"><span
              class="text-primary"
            >{{user.displayName}}</span></a>
          <span style="font-size:0.5rem">{{formatDate
              createdAt
              "MMMM Do YYYY"
            }}</span>
        </span>

      </div>
      <div class="card-body p-3">

        <div style="display: flex; justify-content:space-between">
          <a href="/stories/{{_id}}">
            <h6 class="m-0 text-lg text-primary font-weight-bold">{{title}}</h6>
          </a>
          <div class="balance_icon">
            <div>{{{editIcon user ../user _id}}}</div>
            <div>{{{deleteIcon user ../user _id}}}</div>

          </div>

        </div>

        <p class="font-weight-normal text-dark">{{stripTags
            (truncate body 150)
          }}
          <a style="display:inline" href="/stories/{{_id}}"><span
              class="text-gray-600"
            >Read More</span></a></p>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>You have not created any stories</p>
{{/if}}