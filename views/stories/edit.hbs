<h3>Edit Story</h3>
<div class="row">
  <form action="/stories/{{story._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT" />

    <div class="form-group">
      <label for="title">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        required="true"
        value="{{story.title}}"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="status">Status</label>
      <select
        class="form-control"
        id="exampleFormControlSelect1 status"
        name="status"
        required="true"
      >
        {{#select story.status}}
          <option value="public" selected>Publish</option>
          <option value="private">Draft</option>
        {{/select}}
      </select>
    </div>

    <div class="form-group">
      <div class="input-field" required="true">
        <label for="body">Tell Us Your Story:</label>
        <textarea
          name="body"
          required="true"
          class="form-control"
          id="body"
          rows="3"
        >{{story.body}}</textarea>
      </div>
    </div>

    <div class="row">
      <input
        type="submit"
        value="Save"
        class="btn btn-success btn-icon-split"
        style="padding: 10px;"
      />
      <a href="/stories" class="btn btn-danger">
        <span class="text">Cancel</span>
      </a>
    </div>
  </form>
</div>